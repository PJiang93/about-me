---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there 👋</div>
      <div class="text-5xl font-bold">I'm Peng Jiang</div>
      <div class="text-3xl py-3 font-bold">Lecturer @ Old Dominion University</div>
      <div class="py-2">
        <text class="text-lg">
          Exploring the world, one idea at a time.
          </text
        >
      </div>
      <!-- <div class="mt-8">
        <a class="btn" href="https://twitter.com/manuelernestog" target="_blank"> Let's connect!</a>
        <a href="https://github.com/manuelernestog/astro-modern-personal-website" target="_blank" class="btn btn-outline ml-5"> Get This template</a>
      </div> -->
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">Recent Projects </div>
    </div>

    <HorizontalCard
      title="Spotlighting and Mitigating Cyber‐Attacks in AIoT‐enabled Maritime Transportation"
      img="/maritime_security.jpg"
      desc="This project investigates the cybersecurity implications of an AIoT-enabled MTS (Maritime Transport System), with overarching goals : 1) to evaluate the security effectiveness of AIoT-enabled MTS systems with penetration tests, 2) to tailor new defense models that can counter against cutting-edge cyber-attacks."
      url="#"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Developing a Holistic Evaluation Framework for Multi-Modal AI Security and Trustworthiness on Smart IoT Devices in NextG Wireless Networks"
    img="/iot-security.png"
    desc="This project aims to build a holistic evaluation framework for Multi-Modal AI Security and Trustworthiness on Federated AIoE (AI-enhanced Internet of Everything) with two goals, investigate intrinsically new vulnerabilities and attack vectors in multi-modal AIoE FL systems,  and devise effective algorithms to accurately detect/mitigate the identified attacks."
    url="#"
    badge="NEW"

  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="GPU Powered IoT Testbed to Expand CCI Lab Environment"
    img="/lab_upgrade.jpg"
    desc="This project aims to develop an IoT device testbed inside of the CCI Academic environment with GPU capability.It provides a private cloud environment supporting IoT experimentation and GPU capability for CCI students and faculty greatly benefits both ODU and the region. "
    url="#"
  />

